<%- layout("/layouts/boilerplate") -%>

<div class="main-profile mt-[100px]">
  <div class="div-profile flex flex-col gap-3 w-100 justify-center items-center border-bottom border-black pb-[22px] ">
    <img class="rounded-[50%] w-[200px] " src="data:image/png;base64," alt="">
  <button class="btn btn-danger w-[200px] ">Profile</button>
  </div>
  <div class="bg-white min-h-screen flex flex-col items-center py-10 w-100 ">
  <!-- Top Buttons -->
  <div class="flex gap-4 mb-8 justify-evenly w-100 max-sm:flex-wrap ">
    <button id="profileBtn" 
      class="w-[300px] flex items-center justify-center max-sm:text-[0.5rem] max-md:w-[100%] tab-btn px-5 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 transition">
      Profile
    </button>
    <button id="addressBtn" 
      class="w-[300px] flex items-center justify-center max-sm:text-[0.5rem] max-md:w-[100%] tab-btn px-5 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 transition">
      Address Book
    </button>
    <button id="bookingBtn" 
      class="w-[300px] flex items-center justify-center max-sm:text-[0.5rem] max-md:w-[100%] tab-btn px-5 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 transition">
      Booking Detail
    </button>
  </div>

  <!-- Content Area -->
  <div id="content" class="w-[100%] max-w-xl bg-white p-6 max-sm:p-0 rounded-xl shadow-lg border border-gray-200">
    <!-- Default content (Profile) -->
    <div id="profileSection" class="tab-content max-md:w-[100%]">
      <h2 class="text-xl font-semibold text-gray-800 mb-4  max-sm:text-16px">Profile Information</h2>
      <p><strong>Name:</strong> Zakir Rehman</p>
      <p><strong>Email:</strong> zakir@example.com</p>
      <p><strong>Gender:</strong> Male</p>
    </div>

    <div id="addressSection" class="tab-content hidden max-md:w-[100%]">
      <h2 class="text-xl font-semibold text-gray-800 mb-4 max-sm:text-16px">Address Book</h2>
      <p><strong>Home Address:</strong> 123 Main Street, Lahore</p>
      <p><strong>City:</strong> Lahore</p>
      <p><strong>Postal Code:</strong> 54000</p>
    </div>

    <div id="bookingSection" class="tab-content hidden max-md:w-[100%]">
      <h2 class="text-xl font-semibold text-gray-800 mb-4 max-sm:text-16px">Booking Details</h2>
      <p><strong>Recent Booking:</strong> 2 Nights at Islamabad Hotel</p>
      <p><strong>Date:</strong> 10th - 12th October, 2025</p>
      <p><strong>Status:</strong> Confirmed âœ…</p>
    </div>
  </div>
</div>
 
</div>
<script>
  const tabs = {
    profileBtn: "profileSection",
    addressBtn: "addressSection",
    bookingBtn: "bookingSection"
  };

  Object.keys(tabs).forEach(btnId => {
    document.getElementById(btnId).addEventListener("click", () => {
      // Hide all sections
      document.querySelectorAll(".tab-content").forEach(sec => sec.classList.add("hidden"));

      // Remove active style from all buttons
      document.querySelectorAll(".tab-btn").forEach(btn => {
        btn.classList.remove("bg-red-500", "text-white");
        btn.classList.add("bg-gray-200", "text-gray-700");
      });

      // Show selected section
      document.getElementById(tabs[btnId]).classList.remove("hidden");

      // Highlight selected button
      const activeBtn = document.getElementById(btnId);
      activeBtn.classList.remove("bg-gray-200", "text-gray-700");
      activeBtn.classList.add("bg-red-500", "text-white");
    });
  });
</script>