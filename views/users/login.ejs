<%- layout("/layouts/boilerplate") -%>

<div class="row top-margin-div justify-content-center">
    <div class="col-12 col-md-6 bg-white p-4 rounded shadow-sm">
        <h1 class="fs-4 mb-4 text-center fw-bold">Login to Wonderlust</h1>

        <form action="/login" method="POST" class="needs-validation" novalidate>

            <!-- Email -->
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" id="email" type="email" class="form-control" required />
                <div class="invalid-feedback">Please fill Email!</div>
                <div class="valid-feedback">Successfully Filled</div>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" class="form-control" required />
                <div class="invalid-feedback">Please fill Password!</div>
                <div class="valid-feedback">Looks Good</div>
            </div>

            <!-- Submit Button -->
            <button class="btn btn-danger w-100 fw-bold">Login</button>

            <!-- Forgot + Signup Links -->
            <div class="text-center mt-3">
                <a href="/forgot-password" class="text-secondary small">Forgot password?</a>
                <p class="mt-2 mb-0">Donâ€™t have an account? 
                    <a href="/signup" class="text-danger fw-semibold">Sign Up</a>
                </p>
            </div>
        </form>
    </div>
</div>
